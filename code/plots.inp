open abdata --quiet
list y = n k w
series factor = IND

bundle opts = _(transparency_level = 175,
  centroid = "median",
  tics = FALSE,
  pointsize = 1.5,
  centroid_pointsize = 3,
  centroid_linewidth = 3,
  height = 600,
  width = 600)
opts.filename = "pairplot_factorized.png"
PairPlot(y, factor, opts)



